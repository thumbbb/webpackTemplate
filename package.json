    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "swiper": "^11.0.4",
    "vanillajs-datepicker": "^1.3.4",
